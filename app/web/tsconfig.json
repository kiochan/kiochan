{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "eslint.config.js",
    "../../eslint.config.base.js",
    "../../dist/web/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "dist/types/**/*.ts",
    "../../dist/types/**/*.ts",
    "../../dist/app-web/types/**/*.ts",
    "eslint.config.js"
  ],
  "exclude": ["node_modules", "jest.config.js", "**/*.spec.ts", "**/*.test.ts"]
}
